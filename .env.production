# Production Environment Variables
# Used in production deployments

# Application Configuration
REACT_APP_API_BASE_URL=https://api.valvechain.com
REACT_APP_ENVIRONMENT=production

# Blockchain Configuration - Mainnet
REACT_APP_PO_CONTRACT_ADDRESS=0x1234567890123456789012345678901234567890
REACT_APP_ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/YOUR_PROJECT_ID
REACT_APP_CHAIN_ID=1

# Wallet Configuration
REACT_APP_WALLET_CONNECT_PROJECT_ID=your_production_project_id
REACT_APP_INFURA_API_KEY=your_production_infura_key

# Monitoring and Analytics
REACT_APP_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
REACT_APP_ANALYTICS_ID=G-XXXXXXXXXX

# Feature Flags
REACT_APP_ENABLE_MOCK_DATA=false
REACT_APP_ENABLE_DEBUG_LOGGING=false

# Internationalization
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_SUPPORTED_LANGUAGES=en,ar,es,de,zh