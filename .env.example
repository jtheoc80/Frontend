# Environment Variables Configuration
# Copy this file to .env and configure for your environment

# Application Configuration
REACT_APP_API_BASE_URL=http://localhost:3001
REACT_APP_ENVIRONMENT=development

# Blockchain Configuration
REACT_APP_PO_CONTRACT_ADDRESS=0x742d35cc6545c2b79fb4cf4d9f8e3f6b9e8f5a9c
REACT_APP_ETHEREUM_RPC_URL=http://localhost:8545
REACT_APP_CHAIN_ID=1337

# Wallet Configuration (Optional)
REACT_APP_WALLET_CONNECT_PROJECT_ID=your_project_id
REACT_APP_INFURA_API_KEY=your_infura_key

# Monitoring and Analytics (Optional)
REACT_APP_SENTRY_DSN=your_sentry_dsn
REACT_APP_ANALYTICS_ID=your_analytics_id

# Feature Flags
REACT_APP_ENABLE_MOCK_DATA=true
REACT_APP_ENABLE_DEBUG_LOGGING=true

# Internationalization
REACT_APP_DEFAULT_LANGUAGE=en
REACT_APP_SUPPORTED_LANGUAGES=en,ar,es,de,zh